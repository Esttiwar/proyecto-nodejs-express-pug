doctype html
html 
    head 
        title #{titulo}
        meta(charset="UTF-8")
        link(rel="stylesheet", href="main.css")
    
    body 
        main 
        h1 #{titulo}
        figure 
            img(src=imagen, alt="img")
            figcaption #{texto}
        ul
            each perro in perros
             li 
                a(href="perro/"+perro.raza) #{perro.raza} &nbsp | &nbsp